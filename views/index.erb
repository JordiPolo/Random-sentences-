
<%=session['fb_error']%>
<% if flash[:notice]%>
  <div id="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="center">
  <h3><%= session['fb_auth']['user_info']['first_name'] + ', ' if session['fb_token'] %>
      tu frase del día</h3>

 <% if not @sentence.nil? %>
  <%=@sentence.contents  %><br/>
  <% if not @sentence.meaning.empty? %>
    Quizá quiso decir <%= @sentence.meaning %>  :/<br/>
  <% end %>
  <%=@sentence.speaker  %><br/>
 <% end %>
</div>

<div id="hall">
  <div id="hall_title" >
    Hall of Infame
  </div>

  <div id="infames" style="margin:10px">
    <table>
      <% @ranking.each do |a| %>
      <tr>
        <td><%= a[0] %>:</td><td> <%= a[1] %></td>
      </tr>
     <% end %>
    </table>
  </div>
</div>

<footer>
  <% if session['fb_token'] %>
    <a href="/postToFB">Enviar frase a Facebook</a>
  <% else %>
    <a href="/auth/facebook">Logete para enviar a Facebook</a>
  <% end %>
</footer>

